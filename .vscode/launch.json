    "version": "0.2.0",
    "configurations": [
        {
            /* Configuration for the STM32F429-DISCO Discovery board */
            "type": "cortex-debug",
            "request": "launch",
            "name": "Debug (OpenOCD)",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "executable": "./target/thumbv7m-none-eabi/debug/${workspaceFolderBasename}",
            "preLaunchTask": "Cargo Build (debug)",
            // "runToEntryPoint": "__reset_handler",
            "postLaunchCommands": [
                "monitor arm semihosting enable"
            ],
            "interface": "swd",
            "device": "STM32F429I-DISCO",
            "configFiles": [
                "board/stm32f429disc1.cfg"
            ],
            "svdFile": "${workspaceRoot}/STM32F429.svd",
            // "swoConfig": {
            //     "enabled": true,
            //     "cpuFrequency": 16000000,
            //     "swoFrequency": 1800000,
            //     "source": "probe",
